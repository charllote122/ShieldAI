# =============================================
# ShieldAI Extension Environment Configuration
# =============================================

# =======================
# Extension Configuration
# =======================
EXTENSION_ID=shieldai-protection
EXTENSION_VERSION=1.0.0
EXTENSION_NAME="ShieldAI Protection"

# =======================
# API Configuration
# =======================
API_BASE_URL=https://api.shieldai.com/api/v1
WS_URL=wss://api.shieldai.com/ws

# =======================
# Feature Flags
# =======================
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_CONTENT_SCRIPT=true
ENABLE_POPUP=true
ENABLE_BACKGROUND_SYNC=true

# =======================
# Content Security
# =======================
ALLOWED_DOMAINS=["twitter.com", "facebook.com", "instagram.com", "whatsapp.com"]
BLOCKED_DOMAINS=["malicious.com", "spam-site.com"]

# =======================
# Performance
# =======================
ANALYSIS_DEBOUNCE_MS=500
MAX_TEXT_LENGTH=1000
CACHE_SIZE_LIMIT=100

# =======================
# Privacy & Security
# =======================
ENABLE_LOCAL_ANALYSIS=true
DATA_RETENTION_DAYS=7
ANONYMIZE_USER_DATA=true