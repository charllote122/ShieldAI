{
    "manifest_version": 3,
    "name": "ShieldAI - Digital Violence Protection",
    "version": "1.0.0",
    "description": "AI-powered protection against online harassment for women and girls",
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["http://localhost:8000/*"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "ShieldAI Protection"
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitter.com/*", "*://*.facebook.com/*", "*://*.instagram.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png", 
        "128": "icons/icon128.png"
    }
}